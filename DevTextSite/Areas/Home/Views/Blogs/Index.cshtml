@using Webdiyer.WebControls.Mvc
@model PagedList<Codingwell.DevText.Model.Entities.Article>
@{
	ViewBag.Title = "博客-Devtext";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LocationPath{
	<a class="title" href="/">Devtext.com</a> » <a href="/home/blogs">博客</a>
}
<div class="fl user_left">
	@{Html.RenderAction("LeftNavigtion", "UserNavigation");}
</div>
<div class="fr user_right">
	<h1 class="user_title">
		全站文章</h1>
	<div class="user_tab">
		<ul>
			<li class="now"><a href="/home/blogs">全站文章</a></li>
			<li><a href="/home/blogs/my">我的文章</a></li>
			<li><a href="/home/blogs/post">发表文章</a></li>
		</ul>
	</div>
	<div class="user_con">
		<div class="fl">
			<div class="user_con_left">
				<ul class="l2_list blog_list">
					@foreach (var article in Model) {
						<li>
							<h2>
								<a href="/blogs/detail/@article.ID/@article.Path" target="_blank" class="color_blue">@article.Title</a></h2>
							<div class="fl blog_tx">
								<a href="/user/@article.CreatorID" target="_blank">
									<img alt="@article.User.NickName 的头像" class="blogavatar" src="@article.User.Figureurl50" /></a></div>
							<div class="l2_list_text">
								<p>@Html.Raw(article.Summary)</p>
								<p class="send_info">
									<a href="/user/@article.CreatorID/" class="color_blue">@article.User.NickName</a><span>发表于
										@article.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</span><span class="read">@article.PageViewCount
											次浏览</span></p>
							</div>
							<div class="clearfix">
							</div>
						</li>
	 }
				</ul>
				<div class="depage">@Html.Pager(Model, new PagerOptions { PageIndexParameterName = "page", CssClass = BarStyle.flickr.ToString(), NumericPagerItemCount = 7 })</div>
			</div>
		</div>
		<div class="fr user_con_right">
		</div>
	</div>
</div>
<div class="clearfix">
</div>
