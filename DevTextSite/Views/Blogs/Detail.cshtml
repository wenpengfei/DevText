@model Codingwell.DevText.Model.ViewModel.ArticleDetail
@{
	ViewBag.Title = Model.Article.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderSection{
	<meta name="keywords" content="@Model.Article.MetaKeywords" />
	<meta name="description" content="@Model.Article.MetaDescription"/>
}
@section LocationPath{
	<a class="title" href="/">Devtext.com</a> » <a href="/blogs/">博客</a> » @Model.Article.Title
}
<div class="fl l3_left">
	<div class="blog_essay">
		<div class="essay_title">
			<h1>@Model.Article.Title</h1>
		</div>
		<div class="essay_text">@Html.Raw(Model.Article.ArticleContent)</div>
		<div class="essay_from">
			<div class="fl share">
				<div id="ckepop">
					<a class="jiathis_button_tsina"></a><a class="jiathis_button_renren"></a><a class="jiathis_button_kaixin001">
					</a>
				</div>
				<script type="text/javascript" src="http://v2.jiathis.com/code/jia.js" charset="utf-8"></script>
			</div>
			<div class="fl">
				<p>
					<a version="1.0" class="qzOpenerDiv" href="http://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_likeurl"
						target="_blank">赞</a><script src="http://qzonestyle.gtimg.cn/qzone/app/qzlike/qzopensl.js#jsdate=20111107&style=3&showcount=1&width=130&height=30"
							charset="utf-8" defer="defer"></script></p>
			</div>
			<div class="fr">
				<p>
					发布于：@Model.Article.LastChanged.ToString("yyyy-MM-dd HH:mm") @Model.Article.PageViewCount
					次阅读 来自：<a href="@(string.IsNullOrEmpty(Model.Article.WebFromAddress) ? "#" : Model.Article.WebFromAddress)" target="_blank">@Model.Article.WebFrom</a></p>
			</div>
			<div class="clearfix">
			</div>
		</div>
		<div id="news_otherinfo">
			<div id="come_from">
			</div>
		</div>
		<div class="clear" style="height: 5px;">
		</div>
		<div id="div-gpt-ad-1329663938259-4" style="text-align:center;">
			<script type='text/javascript'>
				googletag.cmd.push(function () { googletag.display('div-gpt-ad-1329663938259-4'); });
			</script>
		</div>
	</div>
	<div class="clear">
	</div>
</div>
<div class="fr l3_right">
	<div class="blog_user">
		<img src="@Model.Owner.Figureurl100" alt="头像" />
		<div class="shengwang">
			1<br />
			声望
		</div>
		<div class="blog_user_info">
			用户昵称：<a href="/user/@Model.Owner.UserID/">@Model.Owner.NickName</a><br />
			用户类型：注册用户<br />
			注册时间：@Model.Owner.CreateTime.ToString("yyyy-MM-dd")<br />
			最近登录：@Model.Owner.LastLoginTime.ToString("yyyy-MM-dd")
		</div>
	</div>
	<div id='div-gpt-ad-1329663938259-1' style='width: 120px; height: 240px;'>
		<script type="text/javascript">
			googletag.cmd.push(function () { googletag.display('div-gpt-ad-1329663938259-1'); });
		</script>
	</div>
</div>
<div class="clearfix">
</div>
