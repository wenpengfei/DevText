@model IList<Codingwell.DevText.Model.Entities.News>
<div class="h_news_con">
   @{if (Model.Count > 0) { 
		 <dl>
		 @{if (Model[0].TopicID.HasValue) { 
						<a href="/news/topic/@Model[0].TopicID"><img alt=""  class="fr" src="@Model[0].NewsTopic.FilePath" /></a>
	 }}
		 <dt><a href="/news/detail/@Model[0].ID/@Model[0].Path" target="_blank">@Model[0].Title</a></dt>
		 <dd>@Html.Raw(Model[0].Summary)</dd>
		 </dl>
	   <ul class="homehotlist">
		@{for (int i = 1; i < Model.Count; i++) {
		var cate = Model[i].NewsCategories.FirstOrDefault();
		if (cate == null) {
			<li><a href="#">【暂无归类】</a><a href="/news/detail/@Model[i].ID/@Model[i].Path" target="_blank" >@Model[i].Title</a></li>
		} else { 
		<li><a href="/news/category/@cate.ID" target="_blank">【@cate.Name】</a><a href="/news/detail/@Model[i].ID/@Model[i].Path" target="_blank" >@Model[i].Title</a></li>
		}
	}
	 }
	   </ul>
	 }
   }
</div>
